<div class="mt-6">
  <div class="relative">
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Já tem uma conta? Faça login", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
        <% end %>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Criar nova conta", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
        <% end %>

        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
        <% end %>

        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
        <% end %>

        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "font-medium text-indigo-600 hover:text-indigo-500" %><br />
          <% end %>
        <% end %>
      </span>
    </div>
  </div>
</div>
