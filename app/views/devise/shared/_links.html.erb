<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <%= link_to "Entrar", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Cadastrar", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center">
      <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center">
      <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="text-center">
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    <% end %>
  <% end %>
</div>
