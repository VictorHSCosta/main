<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-500 via-blue-600 to-indigo-700 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-4xl font-extrabold text-white">
        Crie sua conta
      </h2>
      <p class="mt-2 text-center text-sm text-blue-100">
        Preencha os dados abaixo para começar
      </p>
    </div>

    <div class="mt-8 bg-white shadow-2xl rounded-lg px-8 py-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-4">
            <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "appearance-none relative block w-full pl-10 px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm",
                  placeholder: "seu@email.com" %>
            </div>
          </div>

          <div class="mb-4">
            <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-1">Mínimo de <%= @minimum_password_length %> caracteres</p>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "appearance-none relative block w-full pl-10 px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm",
                  placeholder: "Digite sua senha" %>
            </div>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "appearance-none relative block w-full pl-10 px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm",
                  placeholder: "Confirme sua senha" %>
            </div>
          </div>
        </div>

        <div>
          <%= f.submit "Cadastrar", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out shadow-lg transform hover:scale-105" %>
        </div>

        <div class="flex items-center justify-center text-sm">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>

    <div class="text-center text-white text-sm">
      <p>Já tem uma conta?
        <%= link_to "Entre aqui", new_session_path(resource_name), class: "font-medium hover:text-blue-200 underline" %>
      </p>
    </div>
  </div>
</div>
