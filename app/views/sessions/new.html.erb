<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Bem-vindo de volta!</h2>
      <p class="text-gray-600">Entre na sua conta para continuar</p>
    </div>

    <!-- Login Form Card -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= label_tag :email, "Email", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= email_field_tag :email, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", placeholder: "seu@email.com", required: true, autofocus: true %>
        </div>

        <div>
          <%= label_tag :password, "Senha", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= password_field_tag :password, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", placeholder: "Digite sua senha", required: true %>
        </div>

        <div>
          <%= submit_tag "Entrar", class: "w-full px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">ou</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <p class="text-gray-600">
          Não tem uma conta?
          <%= link_to "Cadastre-se", signup_path, class: "font-semibold text-indigo-600 hover:text-indigo-700 transition" %>
        </p>
      </div>
    </div>

    <!-- Back to Home -->
    <div class="mt-6 text-center">
      <%= link_to root_path, class: "inline-flex items-center space-x-2 text-gray-600 hover:text-indigo-600 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para a página inicial</span>
      <% end %>
    </div>
  </div>
</div>
