<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Criar uma conta
      </h2>
    </div>

    <%= form_with model: @user, url: signup_path, method: :post, class: "mt-8 space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "erro") %> encontrado:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Seu nome completo", required: true, autofocus: true %>
        </div>

        <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "seu@email.com", required: true %>
        </div>

        <div>
          <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Mínimo 6 caracteres", required: true %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password_confirmation, class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Digite novamente a senha", required: true %>
        </div>
      </div>

      <div>
        <%= form.submit "Criar conta", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>

      <div class="text-center">
        <p class="text-sm text-gray-600">
          Já tem uma conta?
          <%= link_to "Entrar", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
