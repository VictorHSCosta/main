<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Editar Perfil</h1>
      <p class="text-gray-600">Atualize suas informações pessoais e senha</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Profile Information Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
            <svg class="w-7 h-7 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900">Informações Pessoais</h2>
        </div>

        <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@user.errors.count, "erro") %> encontrado:
                  </h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Nome", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.text_field :name, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", placeholder: "Seu nome completo" %>
          </div>

          <div>
            <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", placeholder: "seu@email.com" %>
          </div>

          <div class="flex items-center space-x-4 pt-4">
            <%= f.submit "Salvar Alterações", class: "flex-1 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
            <%= link_to "Cancelar", profile_path, class: "flex-1 px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-semibold text-center" %>
          </div>
        <% end %>
      </div>

      <!-- Change Password Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900">Alterar Senha</h2>
        </div>

        <%= form_with url: update_password_profiles_path, method: :patch, local: true, class: "space-y-6" do |f| %>
          <div>
            <%= label_tag :current_password, "Senha Atual", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= password_field_tag :current_password, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-transparent transition", placeholder: "Digite sua senha atual", required: true %>
          </div>

          <div>
            <%= label_tag :new_password, "Nova Senha", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= password_field_tag :new_password, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-transparent transition", placeholder: "Mínimo 6 caracteres", required: true, minlength: 6 %>
            <p class="mt-1 text-sm text-gray-500">Mínimo de 6 caracteres</p>
          </div>

          <div>
            <%= label_tag :password_confirmation, "Confirmar Nova Senha", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= password_field_tag :password_confirmation, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-transparent transition", placeholder: "Digite a nova senha novamente", required: true, minlength: 6 %>
          </div>

          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  <strong>Importante:</strong> Certifique-se de lembrar sua nova senha. Você precisará dela para fazer login.
                </p>
              </div>
            </div>
          </div>

          <div class="pt-4">
            <%= submit_tag "Alterar Senha", class: "w-full px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Back to Profile Link -->
    <div class="mt-8 text-center">
      <%= link_to profile_path, class: "inline-flex items-center space-x-2 text-indigo-600 hover:text-indigo-700 font-semibold" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar ao Perfil</span>
      <% end %>
    </div>
  </div>
</div>
